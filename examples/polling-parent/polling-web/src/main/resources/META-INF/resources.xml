<resources>
  <!-- router -->
  <Resource id="ClientRouter" type="jug.routing.PollingRouter" provider="jug.polling:PollingRouter"/>

  <!-- routed datasources -->
  <Resource id="jdbc/polling" provider="RoutedDataSource" type="jakarta.sql.DataSource">
    Router = ClientRouter
  </Resource>

  <!-- real datasources -->
  <Resource id="jdbc/client1" type="jakarta.sql.DataSource">
    JdbcDriver org.hsqldb.jdbcDriver
    JdbcUrl jdbc:hsqldb:mem:client1
    UserName sa
    Password
    JtaManaged true
  </Resource>

  <Resource id="jdbc/client1-non-jta" type="jakarta.sql.DataSource">
    JdbcDriver org.hsqldb.jdbcDriver
    JdbcUrl jdbc:hsqldb:mem:client1
    UserName sa
    Password
    JtaManaged false
  </Resource>

  <Resource id="jdbc/client2" type="jakarta.sql.DataSource">
    JdbcDriver org.hsqldb.jdbcDriver
    JdbcUrl jdbc:hsqldb:mem:client2
    UserName sa
    Password
    JtaManaged true
  </Resource>

  <Resource id="jdbc/client2-non-jta" type="jakarta.sql.DataSource">
    JdbcDriver org.hsqldb.jdbcDriver
    JdbcUrl jdbc:hsqldb:mem:client2
    UserName sa
    Password
    JtaManaged false
  </Resource>

  <!-- for remote ejb injection
  <Resource id="middle-server" type="org.apache.openejb.config.sys.JndiProvider">
    java.naming.factory.initial = org.apache.openejb.client.RemoteInitialContextFactory
    java.naming.provider.url = failover:ejb://192.168.1.20:4201,ejbd://192.168.1.30:4201
    #Â java.naming.provider.url = multicast:ejb://192168120:4201?group=default
  </Resource>
  -->
</resources>
